<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.wisdom-framework</groupId>
  <artifactId>activiti</artifactId>
  <version>1.0.1-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Wisdom Activiti extension</name>
  <description>Procide Activiti process engine and administrative UI.
  </description>
  <modules>
   <module>wisdom-activiti</module>
   <module>wisdom-activiti-engine</module>
  </modules>

  <build>
      <plugins>

          <plugin>
              <groupId>external.atlassian.jgitflow</groupId>
              <artifactId>jgitflow-maven-plugin</artifactId>
              <version>1.0-m3</version>
          </plugin>

      </plugins>

  </build>

  <profiles>

      <profile>
          <id>deploy</id>
          <properties>
              <felix.fileinstall.dir>${user.home}/works/felix_fileinstall</felix.fileinstall.dir>
          </properties>
          <build>
              <plugins>
                  <plugin>
                      <artifactId>maven-resources-plugin</artifactId>
                      <version>2.7</version>
                      <executions>
                          <execution>
                              <id>copy-resources</id>
                              <!-- here the phase you need -->
                              <phase>install</phase>
                              <goals>
                                  <goal>copy-resources</goal>
                              </goals>
                              <configuration>
                                  <outputDirectory>${felix.fileinstall.dir}</outputDirectory>
                                  <resources>
                                      <resource>
                                          <directory>target/</directory>
                                          <filtering>false</filtering>
                                          <includes>
                                              <include>${project.artifactId}-${project.version}.jar</include>
                                          </includes>
                                      </resource>
                                  </resources>
                              </configuration>
                          </execution>
                      </executions>
                  </plugin>
              </plugins>
          </build>
      </profile>

  </profiles>

</project>
